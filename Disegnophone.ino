/* Disegnophone Setup * 4 switches, 1 potentiometer * Author: Robert Venezia */const int potPin = A0;const int b1Pin = 2;const int b2Pin = 3;const int b3Pin = 4;const int b4Pin = 5;int potVal = 0;int outVal = 0;int finalVal = 0;int bval = 0;void setup(){  Serial.begin(9600);  pinMode(b1Pin, INPUT);  pinMode(b2Pin, INPUT);  pinMode(b3Pin, INPUT);  pinMode(b4Pin, INPUT);}void loop(){  potVal = analogRead(potPin);  outVal = map(potVal, 0, 1023, 0, 127);  Serial.print(outVal);  Serial.print("\t");  bval = digitalRead(b1Pin);  Serial.print(bval == HIGH ? 1 : 0);  Serial.print("\t");  bval = digitalRead(b2Pin);  Serial.print(bval == HIGH ? 1 : 0);  Serial.print("\t");  bval = digitalRead(b3Pin);  Serial.print(bval == HIGH ? 1 : 0);  Serial.print("\t");  bval = digitalRead(b4Pin);  Serial.print(bval == HIGH ? 1 : 0);  Serial.println();}